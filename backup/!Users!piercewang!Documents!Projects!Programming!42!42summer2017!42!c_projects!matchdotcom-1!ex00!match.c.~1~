int		match(char *s1, char *s2)
{
	if (*s1 == '\0' && *s2 == '\0')
	{
		return (1);
	}
	else if (*s1 == '\0' && *s2 == '*')
	{
		return (match(s1, ++s2));
	}
	else if (*s1 != '\0' && *s2 == '*')
	{
		return (match(++s1, s2) || match(--s1, ++s2));
	}
	else if (*s1 == *s2)
	{
		return (match(++s1, ++s2));
	}
	return (0);
}

int main(int argc, char **arv)
{
        if (argc == 3)
        {
                if (match(argv[1], argv[2]) == 1)
                {
                        ft_putchar('y');
                        ft_putchar('\n');
                }
                else
                {
                        ft_putchar('n');
                        ft_putchar('\n');
                }
        }
        return (0);
}

